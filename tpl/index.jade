
extends layout
block content
  include _header

  .loader
    .copy loading content
    .progress
      .inner
  .body
    include _images
    .titles
      .copy1 Test your Kiwi IQ with
      .copy2 the city-picker
      .copy3 Let's play aa game.  Tell us if each photo is Auckland or San Francisco
        | <br/> and we'll teach you a thing or two.  Careful, they look a lot alike.
    .bubbles
      .bubble.bubbleLeft(data-action='play').noselect
        .copy play now
      .bubble.bubbleRight(data-action='register').noselect
        .copy enter for a chance to win
          .smaller 2 tickets to Auckland
      .clear

    include _game
 
  include _footer
  include _register
  include _notice
