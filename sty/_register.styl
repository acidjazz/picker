
.register
  position absolute
  top 50px
  left 10px
  width 790px
  opacity 1
  z-index 25
  transform-style preserve-3d
  backface-visibility hidden
  transition all 1.0s ease
  &.hidden
    height 1px
    padding 0
    opacity 0
    transition opacity 0.5s ease-in-out 0.5s
  &.off
    transform rotateY(180deg)
    transition all 1.0s ease
  background-color rgba(black, 0.9)
  padding 50px 0 100px 0
  overflow hidden
  transition opacity 0.5s ease-in-out 0.5s
  > .title
    margin 100px 0 0 0
    text-align center
    font-size 3em
  > .copy
    padding 20px 120px
    apex()
    text-align center
    font-size 1em
    line-height 1.1em
  > .form
    > .right
      float right
      width 395px
    .option
      padding 10px 0 0 0
    .checkbox
      cursor pointer
      width 20px
      height 20px
      background-color white
      box-shadow inset 2px 2px 5px 1px rgba(0, 0, 0, 0.7)
      margin 0 0 0 10px
      transition all 0.2s
      border 2px solid rgba(black, 1)
      &.checked
        background-color blue1
        box-shadow 0 0 5px 0 rgba(blue1, 1)
        transition all 0.2s
        border 2px solid rgba(white, 0.65)
    .label
      font-family ApexNewMedium
      font-size 1em
      padding 10px
    .copy
      float left
      apex()
      font-size 0.9em
      margin 0 0 0 40px
  > .left
      float left
      width 395px
      border 1px solid #ff0000
      padding 0 0 20px 0
    .input
      background-color white
      width 340px
      padding 5px 10px
      margin 0 0 0 10px
      box-shadow inset 2px 2px 5px 1px rgba(0, 0, 0, 0.7)
      input
        outline none
        apex()
        font-size 1em
        line-height 1.1em
        border none
        width 320px
    > .submit
      float right
      font-size 3em
      margin -50px 120px 0 20px
      padding 0 20px
      transition color 0.2s
      cursor pointer
      &:hover
        color rgba(blue1, 1)

.post
  position absolute
  display none
  top 200px
  left 10px
  width 790px
  opacity 1
  z-index 10
  transition all 1.0s ease
  transform-style preserve-3d
  backface-visibility hidden
  background-color rgba(black, 0.9)
  text-align center
  padding 100px 0
  transform rotateY(180deg)
  &.on
    transform rotateY(0deg)
    transition all 1.0s ease
  > .title
    font-size 3em
  > .arrow
    width 86px
    height 86px
    transform matrix(1, 0, 0, 1, 0, 0)
    margin 20px auto
    background url(/img/arrow.png)
    animation arrow 1s ease-in 4s both
  > .copy
    apex()
    font-size 1.2em
    line-height 1.3em
    width 575px
    margin 50px auto
  > .share
    font-size 2em
    cursor pointer


@keyframes arrow
  to
    transform matrix(0.93, 0.34, -0.34, 0.93, 350, -520) scale(2)

