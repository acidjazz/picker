
@import _vars
@import _mixins
@import _fonts
@import 'nib'
@import _header
@import _register
@import _notice
@import _game

body,html
  margin 0
  padding 0
  font-family 'AirNewzealand', tahoma, verdana
  font-size 16px
  color #fff
  background-color #000
  position relative

.clear
  clearfix()

.noselect
  user-select none


.container
  overflow hidden
  position relative
  width 810px
  margin auto
  padding 0

.loader
  background-color #000
  padding 60px 0 0 0
  height 791px
  .copy
    margin 100px 0 20px 0
    text-align center
    font-size 2em
    font-family ApexNewLight
  .progress
    width 600px
    height 40px
    border 1px solid white
    margin auto
    .inner
      float left
      background-color white
      width 1px
      height 36px
      border 2px solid black
      transition width 2s

.body
  background-color #000
  padding 60px 0 0 0
  height 791px
  display none
  .titles
    position relative
    z-index 10
    padding 0 0 0 40px
    .copy1, .copy3
      font-family ApexNewLight
    .copy2
      font-size 3em
    .copy3
      padding 10px 0 0 0
  .bubbles.hidden
    transform scale(0)
    transition all 0.2s
  .bubbles
    position relative
    z-index 10
    margin 80px auto 0 auto
    width 640px
    transition all 0.2s
    .bubbleLeft
      animation fromLeft 0.5s 1.25s ease both
    .bubbleRight
      animation fromRight 0.5s 1.5s ease both
    .bubble
      float left
      cursor pointer
      width 300px
      height 300px
      margin 0 10px
      background-color rgba(0, 0, 0, 0.65)
      border-radius 50%
      color #fff
      transition all 0.2s
      &.bubbleRight .copy
        font-size 1.5em  
        > .smaller
          font-size 1em
      &:hover
        background-color rgba(blue1, 0.65)
      &:hover .copy
        transition all 0.2s
      > .copy
        font-size 2.5em
        text-align center
        margin 120px 0 0 0
        > .smaller
          font-family ApexNewLight
          font-size 0.5em

.footer
  text-align center
  .copy1
    font-family ApexNewLight
    font-size 1.2em
    line-height 1.3em
  .copy2
    font-family ApexNewLight
    padding 20px 20px 0 20px
    font-size 0.9em
    line-height 1em

.images
  position absolute
  z-index 1
  .image
    position absolute
    width 810px
    height 791px
    background-size cover
    transition opacity 2s
    opacity 0
    &.show
      opacity 1
      transition opacity 2s
    for image, i in images
      &.image{i}, &.iname_{image}
        background-image url(/img/game/(image));
  .gradient
    position absolute
    top 0px
    left 0px
    width 810px
    height 791px
    background linear-gradient(top, rgba(0,0,0,1) 0%, transparent 20%, transparent 80%, rgba(0,0,0,1) 100%)
    box-shadow inset 0px 0px 100px 10px rgba(0, 0, 0, 0.8)

@keyframes fromLeft
  from
    transform translateX(-25rem) rotate(180deg)
    opacity 0

@keyframes fromRight
  from
    transform translateX(25rem) rotate(-180deg)
    opacity 0
