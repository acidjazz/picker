
.notice
  position fixed
  width 600px
  top 200px
  left 50%
  margin-left -300px
  z-index 25
  background-color rgba(0, 0, 0, 0.9)
  box-shadow 0px 0px 15px 2px rgba(255, 255, 255, 0.5)
  overflow hidden
  transform translateY(-25rem)
  transition transform 0.2s
  .copy
    apex()
    font-size 1.2em
    text-align center
    padding 40px
  .cta
    cursor pointer
    float right
    font-size 2em
    margin 0 20px 10px 0
    &:hover
      color blue1
      transition color 0.2s

.notice.on
  transform translateY(0rem)
  transition transform 0.2s

.fade
  position fixed
  z-index 20
  top 0px
  width 100%
  height 0
  background-color rgba(0, 0, 0, 0.9)
  &.on
    height 100%
