.circle
  position absolute
  z-index 5
  top 200px
  left 100px
  width 600px
  height 600px
  text-align center
  display none
  .chooser, .correct, .wrong, .finished
    position absolute
    width 100%
    height 100%
    border-radius 50%
    transform-style preserve-3d
    backface-visibility hidden
    transition all 1.0s ease
    .choose
      cursor pointer
      display inline-block
      border 2px solid white
      font-size 1.5em
      margin 450px 20px
      padding 10px 20px
      buttonbg()
  .correct, .wrong, .finished
    transform rotateY(180deg)
    &.on
      transform rotateY(0deg)
      transition all 1.0s ease
  .chooser
    transform translateY(50rem)
    transition all 1.0s ease
    &.on
      transform translateY(0rem)
      transition all 1.0s ease
  .correct, .wrong
    background-color rgba(black, 0.65)
    > .title 
      font-size 4em
      margin 150px 0 0 0
    > .copy
      font-family ApexNewLight
      margin 50px auto 0 auto
      width 300px
    > .cta
      cursor pointer
      font-size 2.5em
      margin 50px 0 0 0
      buttontext();
  .finished
    background-color rgba(black, 0.65)
    > .title
      font-size 3em
      margin 150px 0 0 0
    > .copyA
      font-family ApexNewLight
      font-size 1em
    > .score
      font-size 4em
    > .copyB
      font-family ApexNewLight
      font-size 0.8em
      padding 20px 50px
    > .ctas
      width 510px
      margin auto
      text-align center
      font-size 1.4em
      > .cta
        cursor pointer
        width 162px
        display inline-block
        buttontext();
        &.back
          font-size 2em
